@using Tamagotchi.Models;

<h1>Tamagotchi</h1>
@if (Model.Count == 0) {
<p>You don't have any pets yet.</p>
}
<ul>
  @foreach (Pet pet in Model) {
  <li><a href="/pets/@pet.Id">@pet.Name</a></li>
  }
</ul>

<a href="/pets/new">Add a new pet.</a>

<form action="/pets/reset" method="post">
  <button type="submit" name="button">Reset Program</button>
</form>
